{% extends 'base.html.twig' %}

{% block title %}Produits recherchés{% endblock %}

{% block body %}
    <!------------------------------------------ corp de page recherche produits/index ------------------------------------------>

    <!--  formulaire de recherhce par Category et département -->
    <div class="row">
        <div class="col-10 col-lg-6 d-none d-lg-block text-center my-auto mx-auto mt-3">
            <h2 class="bg-dark text-white rounded py-2">Votre recherche</h2>
            <h3>Département :<span class="badge bg-secondary col-10 mx-2">{{ provinceName }}</span></h3>
            <h3>Catégorie :<span class="badge bg-secondary col-10 mx-2">{{ categoryName }}</span></h3>
        </div>
        <div class="col-10 col-lg-4 mx-5 mt-3 mb-2 mx-auto bg-dark text-white p-3 rounded mt-2">
            <h3>Votre recherche</h3>
            <div  class="mx-2 ">
                {{ form_start(form) }}
            </div>
            {{ form_widget(form) }}
            <div class="col-4 mx-auto d-flex justify-content-center ">
                <input type="submit" value="Envoyer" class="btn btn-secondary mt-3 mx-4 ">
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-10 col-lg-6 d-lg-none text-center my-auto mx-auto mt-3">
            <h2 class="bg-dark text-white rounded py-2">Votre recherche</h2>
            <h3>Département :<span class="badge bg-secondary col-10 mx-2">{{ provinceName }}</span></h3>
            <h3>Catégorie :<span class="badge bg-secondary col-10 mx-2">{{ categoryName }}</span></h3>
        </div>
    </div>



    <!--  selection de produit par Category et region -->
    <div class="row text-center d-flex justify-content-center pt-4 ">
        {% for product in products %}
            <div class="col-10 col-lg-3 mb-3 mx-2">
                <div class="card">
                    <img src="{{ product.productPicture }}" class="card-img-top" alt="{{ product.productName }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.productName }}</h5>
                        <p class="card-text">{{ product.productDescription|slice(0, 100) }}...</p>
                        <a href="{{ path('product.detail.index', {'id':product.id}) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
