{% extends 'base.html.twig' %}

{% block title %}Cat√©gorie{% endblock %}

{% block body %}
    <div class="col-9 col-lg-3 mx-5 mb-3 mx-auto bg-dark text-white p-3 rounded mt-2">
        <h3>Votre recherche</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="d-flex justify-content-center">
            <input type="submit" value="Envoyer" class="btn btn-primary mt-3">
        </div>
        {{ form_end(form) }}
    </div>

    <div class="row text-center d-flex justify-content-center pt-4">
        {% for productByCategory in productsByCategory %}
            <div class="col-10 col-lg-2 mb-3">
                <div class="card">
                    <img src="{{ productByCategory.productPicture }}" class="card-img-top" alt="{{ productByCategory.productName }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ productByCategory.productName }}</h5>
                        <p class="card-text">{{ productByCategory.productDescription|slice(0, 100) }}...</p>
                        <a href="{{ path('product.detail.index', {'id':productByCategory.id}) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
