{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="col-11 col-lg-4 mx-5 mt-3 mb-2 mx-auto bg-dark text-white p-2 rounded mt-2">
        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
        <div class="col-11 col-lg-8 my-2 mx-auto">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2 mb-4 " required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control mt-2" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="d-flex justify-content-center pt-2">
            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
        </div>
        <div class="mx-auto d-flex justify-content-center mt-2 mb-2">
            Si vous n'avez pas de compte<a href="{{ path('signup.index') }}" class="ms-2 text-decoration-none">Inscription</a>
        </div>
    </div>
</form>
{% endblock %}
