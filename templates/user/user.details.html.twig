{% extends 'base.html.twig' %}

{% block title %}Détails utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h3>Votre profil</h3>
        <ul>
            <li>Prénom : {{ user.firstname }}</li>
            <li>Nom : {{ user.lastname }}</li>
            <li>Email : {{ user.email }}</li>
            <li>Adresse : {{ user.userAddress }}</li>
            <li>Code postal : {{ user.postalCode }}</li>
            <li>Téléphone : {{ user.userPhone }}</li>
        </ul>

        {% if is_granted('ROLE_ADMIN') %}
            <h3>Votre boutique</h3>
            <ul>
                <li>Nom de la boutique : {{ shopDetail.shopName }}</li>
                <li>Description de la boutique : {{ shopDetail.shopDescription }}</li>
                <li>Adresse de la boutique : {{ shopDetail.shopAddress }}</li>
                <li>Département : {{ province }}</li>
                <li>Téléphone de la boutique : {{ shopDetail.shopPhone }}</li>
                <li>Logo : <img src="{{ asset_product_image(shopDetail.shopPicture) }}" alt="{{ shopDetail.shopName }}" class="w-25"></li>
            </ul>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin.index') }}" class="btn btn-primary">Retrouvez vos articles</a>
        {% else %}
            <a href="{{ path('create.shop.index') }}" class="btn btn-primary">Créez votre boutique</a>
        {% endif %}

    </div>
{% endblock %}
